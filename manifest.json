{
    "manifest_version": 2,
    "name": "Chrome Extension Sample",
    "description": "This extension lets you manipulate the DOM",
    "version": "1.0",
    "homepage_url": "https://github.com/dvidsilva/chrome-ext-sample",
    "browser_action": {
        "default_icon": "icons/off.png",
        "default_popup": "popup.html",
        "default_title": "ChromiePop"
    },
    "background": {
        "scripts": ["scripts/background.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js":      ["scripts/content.js", "scripts/jquery.min.js"]
    }],
    "permissions": [
        "activeTab",
        "tabs",
        "http://*/*",
        "https://*/*",
        "background",
        "bookmarks",
        "clipboardRead",
        "clipboardWrite",
        "contentSettings",
        "cookies",
        "*://*.google.com/",
        "<all_urls>",
        "debugger",
        "history",
        "idle",
        "management",
        "notifications",
        "pageCapture",
        "topSites",
        "storage",
        "webNavigation",
        "webRequestBlocking"
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com/; object-src 'self'"
}
